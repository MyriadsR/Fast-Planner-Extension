<?xml version="1.0"?>
<launch>

  <!-- 启动RViz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find test_prm)/launch/prm_test.rviz" required="false" />

  <!-- 启动简单动态场景测试节点 -->
  <!-- 该节点会自动创建静态和动态障碍物，无需外部发布 -->
  <node pkg="test_prm" type="test_prm_dynamic_simple_node" name="test_prm_dynamic_simple" output="screen">
    <!-- PRM参数 -->
    <param name="robot_speed" value="0.1" />
    <param name="max_sample_time" value="1.0" />
    <param name="max_sample_num" value="500" />
    <param name="safety_margin" value="0.3" />

    <!-- 采样区域参数 -->
    <rosparam param="sample_inflate_x">[1.0, 1.0, 1.0]</rosparam>
  </node>

</launch>
